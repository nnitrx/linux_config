(in-package :stumpwm)

(define-key *top-map* (kbd "s-RET") "run-shell-command urxvtc")
(define-key *top-map* (kbd "s-r") "run-shell-command")

(setq *ignore-wm-inc-hints* t)
(set-bg-color "#3f3f3f")
(set-fg-color "#dcdccc")

(init-load-path "/home/nnitrx/.stumpwm.d/modules")

(load-module "ttf-fonts")
(set-font (make-instance 'xft:font :family "mononoki" :subfamily "Regular" :size 11.5 :antialias T))

(load-module "battery-portable")
(setf *screen-mode-line-format* "[^B%n^b] %W ^> ^B%B %d^b")
(setf *time-modeline-string* "%a %b %e %l:%M %P")
(mode-line)

(load-module "amixer")
(define-key *top-map* (kbd "XF86AudioLowerVolume") "amixer-Master-1-")
(define-key *top-map* (kbd "XF86AudioRaiseVolume") "amixer-Master-1+")
(define-key *top-map* (kbd "XF86AudioMute") "amixer-Master-toggle pulse")